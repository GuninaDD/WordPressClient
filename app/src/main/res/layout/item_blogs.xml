<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView

        android:id="@+id/cv_blogs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_marginLeft="@dimen/card_margin_left_and_right"
        android:layout_marginTop="@dimen/card_margin_top"
        android:layout_marginRight="@dimen/card_margin_left_and_right"
        android:minWidth="@dimen/min_width">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_blogimage"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_marginStart="@dimen/image_margin"
                android:layout_marginLeft="@dimen/image_margin"
                android:layout_marginTop="@dimen/image_margin"
                android:layout_marginRight="@dimen/image_margin"
                android:layout_marginBottom="@dimen/image_margin"
                android:background="@mipmap/ic_image_bg"
                android:contentDescription="@string/blog_image_contentDescription"
                android:padding="@dimen/image_padding"
                app:srcCompat="@mipmap/ic_image"
                tools:srcCompat="@mipmap/ic_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/image_margin"
                android:layout_marginLeft="@dimen/image_margin"
                android:orientation="vertical"
                android:paddingTop="@dimen/blog_header_padding_top"
                android:paddingBottom="@dimen/blog_text_padding_bottom">

                <TextView
                    android:id="@+id/tv_blogheader"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/blog_header_height"
                    android:layout_marginBottom="@dimen/blog_header_margin_bottom"
                    android:layout_weight="1"
                    android:text="@string/blogHeader"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/blog_header_text_size" />

                <TextView
                    android:id="@+id/tv_blogurl"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/blog_text_height"
                    android:layout_weight="1"
                    android:text="@string/blogURL"
                    android:textColor="@color/colorBlogURLandTime"
                    android:textSize="@dimen/blog_text_textSize" />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>