<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/colorLabel_image"
        android:layout_width="@dimen/label_size"
        android:layout_height="@dimen/label_size"
        android:layout_marginStart="@dimen/label_margin_left"
        android:layout_marginLeft="@dimen/label_margin_left"
        android:layout_marginTop="@dimen/label_margin_top"
        android:contentDescription="@string/label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@color/colorWhite" />

    <TextView
        android:id="@+id/header_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/label_header_height"
        android:layout_marginStart="@dimen/label_header_margin_left"
        android:layout_marginLeft="@dimen/label_header_margin_left"
        android:layout_marginTop="@dimen/label_header_margin_top"
        android:layout_marginBottom="@dimen/label_header_margin_bottom"
        android:text="@string/label"
        android:textColor="@color/colorHeaders"
        android:textSize="@dimen/label_header_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/colorLabel_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>